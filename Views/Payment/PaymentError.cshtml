@{
    ViewData["Title"] = "Payment Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Payment Failed</h3>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-circle-fill text-danger" style="font-size: 4rem;"></i>
                    <h4 class="mt-3">Sorry, there was a problem with your payment</h4>
                    <p class="text-muted">@ViewBag.ErrorMessage</p>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Movie")" class="btn btn-primary">
                            <i class="bi bi-film"></i> Browse Movies
                        </a>
                        <a href="@Url.Action("Process", "Payment")" class="btn btn-outline-primary ms-2">
                            <i class="bi bi-arrow-repeat"></i> Try Again
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 