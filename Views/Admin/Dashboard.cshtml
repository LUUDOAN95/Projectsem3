@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Admin Dashboard</h1>
        <form asp-action="Logout" method="post">
            <button type="submit" class="btn btn-outline-danger">Logout</button>
        </form>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Shop Management</h5>
                </div>
                <div class="card-body">
                    <p>Manage shops in the mall</p>
                    <a asp-action="ManageShops" class="btn btn-outline-primary">Manage Shops</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Movie Management</h5>
                </div>
                <div class="card-body">
                    <p>Manage movies and showtimes</p>
                    <a asp-action="ManageMovies" class="btn btn-outline-success">Manage Movies</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Ticket Management</h5>
                </div>
                <div class="card-body">
                    <p>Manage showtimes and bookings</p>
                    <a asp-action="ManageTickets" class="btn btn-outline-info">Manage Tickets</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-6 mb-3">
                            <h3 id="shopCount">0</h3>
                            <p>Total Shops</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h3 id="movieCount">0</h3>
                            <p>Total Movies</p>
                        </div>
                        <div class="col-md-6">
                            <h3 id="showtimeCount">0</h3>
                            <p>Showtimes</p>
                        </div>
                        <div class="col-md-6">
                            <h3 id="bookingCount">0</h3>
                            <p>Bookings</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Recent Activities</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item">System initialized</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // For a real implementation, these would be populated from backend data
            // For now, we'll just use some placeholder values
            document.getElementById('shopCount').textContent = '@ViewBag.ShopCount ?? "5"';
            document.getElementById('movieCount').textContent = '@ViewBag.MovieCount ?? "10"';
            document.getElementById('showtimeCount').textContent = '@ViewBag.ShowtimeCount ?? "35"';
            document.getElementById('bookingCount').textContent = '@ViewBag.BookingCount ?? "128"';
        });
    </script>
} 