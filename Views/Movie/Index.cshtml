@model eproject3.Controllers.MovieViewModel

<div class="container mt-5">
    <h1 class="mb-4">Movies at ABCD Mall</h1>

    @if (Model.HotMovies.Any())
    {
        <h2>Hot Movies</h2>
        <div class="row mb-4">
            @foreach (var movie in Model.HotMovies)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <img src="@movie.CoverImage" class="card-img-top" alt="@movie.Title" style="height: 300px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text">@(movie.Description?.Length > 100 ? movie.Description.Substring(0, 100) + "..." : movie.Description)</p>
                            <p>Duration: @movie.Duration minutes</p>
                            
                            @if (movie.Showtimes != null && movie.Showtimes.Any())
                            {
                                <div class="showtimes-preview mb-2">
                                    <strong>Today's Showtimes:</strong>
                                    <div class="d-flex flex-wrap">
                                        @foreach (var showtime in movie.Showtimes.OrderBy(s => s.StartTime).Take(3))
                                        {
                                            <span class="badge bg-primary me-1 mb-1">@showtime.StartTime.ToString("h:mm tt")</span>
                                        }
                                        @if (movie.Showtimes.Count() > 3)
                                        {
                                            <span class="badge bg-secondary me-1 mb-1">+@(movie.Showtimes.Count() - 3) more</span>
                                        }
                                    </div>
                                </div>
                            }
                            
                            <a href="@Url.Action("Detail", "Movie", new { id = movie.MovieId })" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (Model.PopularMovies.Any())
    {
        <h2>Popular Movies</h2>
        <div class="row mb-4">
